{
  "name": "crud_n_sass",
  "version": "1.0.0",
  "description": "Basic web app using mongoDB and Postman for testing the end points.",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss static/style.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss static/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last versions' static/style.comp.css -o static/style.prefix.css",
    "compress:css": "node-sass static/style.prefix.css static/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Sam",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "concat": "^1.0.3",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1",
    "postcss-scss": "^3.0.2"
  }
}
